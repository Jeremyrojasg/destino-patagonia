---
const { destino } = Astro.props;
---

<a href={destino.href ?? '#'} class="block">
  <article class="relative w-full h-screen sm:h-[80vh] overflow-hidden">
    <img
      src={destino.imagen}
      alt={destino.nombre}
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out hover:scale-105"
      loading="lazy"
    />

    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent"></div>

    <div class="absolute left-6 bottom-12 sm:left-12 sm:bottom-20 text-white max-w-xl">
      <h2 class="text-3xl sm:text-5xl font-bold leading-tight">{destino.nombre}</h2>
      {destino.descripcion && (
        <p class="mt-2 text-sm sm:text-lg opacity-90">{destino.descripcion}</p>
      )}
    </div>
    {destino.trasladosAvailable && (
      <div class="absolute top-6 right-6">
        <span class="inline-block bg-forest-green text-white text-xs px-3 py-1 rounded-full shadow">Traslados</span>
      </div>
    )}
  </article>
</a>
