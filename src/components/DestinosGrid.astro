---
import { destinos } from "../data/destinos";
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  {destinos.map(destino => (
    <a 
      href={destino.href} 
      class="group rounded-xl overflow-hidden shadow-lg hover:scale-105 transition duration-300 bg-white hover:shadow-xl"
    >
      <div class="relative">
        <img 
          src={destino.imagen} 
          alt={destino.nombre} 
          class="w-full h-56 object-cover transition duration-300 group-hover:brightness-105" 
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition duration-300"></div>
      </div>
      <div class="p-4">
        <h4 class="text-xl font-semibold text-forest-green mb-2 group-hover:text-light-green transition duration-300">
          {destino.nombre}
        </h4>
        <p class="text-sm text-gray-700">
          {destino.descripcion}
        </p>
      </div>
    </a>
  ))}
</div>