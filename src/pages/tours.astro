---
import BaseLayout from "../layouts/BaseLayout.astro";
import TourCard from "../components/TourCard.astro";
import { tours } from "../data/tours";

const title = "Tours - Destino Patagonia";
const description = "Descubre nuestros tours especialmente diseñados que combinan los mejores destinos de la Patagonia en experiencias únicas e inolvidables.";
---

<BaseLayout title={title}>
  <main class="max-w-7xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-forest-green mb-4">
        Tours en la Patagonia
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {description}
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {tours.map(tour => (
        <TourCard tour={tour} />
      ))}
    </div>

    <div class="mt-16 text-center">
      <a
        href="https://wa.me/5492945547115"
        class="inline-block bg-forest-green text-white px-8 py-4 rounded-full font-semibold hover:bg-light-green hover:text-forest-green transition"
      >
        Consultar disponibilidad
      </a>
    </div>
  </main>
</BaseLayout>